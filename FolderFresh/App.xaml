<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="FolderFresh.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- FolderFresh 3.0.1 Beta Color Palette - Discord Dark Purple Theme -->
            <Color x:Key="AppBackground">#111214</Color>
            <Color x:Key="TopBarBackground">#1E1F22</Color>
            <Color x:Key="CardBackground">#1E1F22</Color>
            <Color x:Key="CardBorder">#2B2D31</Color>
            <Color x:Key="SurfaceAlt">#232428</Color>
            <Color x:Key="SidebarBackground">#17181A</Color>
            <Color x:Key="AccentColor">#5865F2</Color>
            <Color x:Key="AccentHover">#4752C4</Color>
            <Color x:Key="TextPrimary">#F2F3F5</Color>
            <Color x:Key="TextSecondary">#B5BAC1</Color>
            <Color x:Key="TextMuted">#949BA4</Color>
            <Color x:Key="TextSubtle">#6D6F78</Color>

            <!-- Brushes -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackground}"/>
            <SolidColorBrush x:Key="TopBarBackgroundBrush" Color="{StaticResource TopBarBackground}"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
            <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorder}"/>
            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackground}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
            <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>

            <!-- Override WinUI NavigationView colors for dark theme -->
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="#111214"/>
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="#17181A"/>
            <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#17181A"/>
            <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent"/>

            <!-- Primary Button Style -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="24,12"/>
            </Style>

            <!-- Card Style -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
            </Style>

            <!-- Section Label Style -->
            <Style x:Key="SectionLabelStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                <Setter Property="CharacterSpacing" Value="50"/>
            </Style>

            <!-- Pill Radio Button Style for Match Type Selection -->
            <Style x:Key="PillRadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="#333333"/>
                <Setter Property="Foreground" Value="#999999"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="MinWidth" Value="50"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="CornerRadius" Value="14"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="RootBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    Padding="{TemplateBinding Padding}"
                                    BorderThickness="1"
                                    BorderBrush="Transparent">
                                <ContentPresenter x:Name="ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"
                                                  FontSize="13"
                                                  FontWeight="SemiBold"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
