<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FolderFresh.Components.RuleEditorPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderFresh.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#1C1C1C">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="24,16" Background="#252525">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       x:Name="HeaderTitle"
                       Text="New Rule"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="White"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    x:Name="CloseButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8"
                    Click="CloseButton_Click">
                <TextBlock Text="&#xE711;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="16"
                           Foreground="#999999"/>
            </Button>
        </Grid>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <StackPanel MaxWidth="600" HorizontalAlignment="Left" Spacing="16">

                <!-- SECTION 1: Basics -->
                <Border Background="#252525" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="16">
                        <!-- Rule Name -->
                        <StackPanel Spacing="6">
                            <TextBlock x:Name="RuleNameLabel"
                                       Text="Rule Name"
                                       FontSize="12"
                                       Foreground="#999999"/>
                            <TextBox x:Name="RuleNameTextBox"
                                     Height="44"
                                     Background="#2D2D2D"
                                     BorderBrush="#333333"
                                     CornerRadius="8"
                                     PlaceholderText="e.g., Move invoices to accounting"
                                     FontSize="14"
                                     TextChanged="RuleNameTextBox_TextChanged"/>
                        </StackPanel>

                        <!-- Enabled Toggle -->
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ToggleSwitch x:Name="EnabledToggle"
                                          OnContent=""
                                          OffContent=""
                                          MinWidth="40"
                                          IsOn="True"
                                          Toggled="EnabledToggle_Toggled"/>
                            <TextBlock x:Name="RuleEnabledLabel"
                                       Text="Rule enabled"
                                       FontSize="14"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- SECTION 2: Conditions -->
                <Border Background="#252525" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="12">
                        <!-- Header Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       x:Name="IfLabel"
                                       Text="If"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>

                            <!-- Match Type Pills -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="4">
                                <RadioButton x:Name="MatchAllRadio"
                                             Content="all"
                                             GroupName="MatchType"
                                             IsChecked="True"
                                             Style="{StaticResource PillRadioButtonStyle}"
                                             Checked="MatchTypeRadio_Checked"/>
                                <RadioButton x:Name="MatchAnyRadio"
                                             Content="any"
                                             GroupName="MatchType"
                                             Style="{StaticResource PillRadioButtonStyle}"
                                             Checked="MatchTypeRadio_Checked"/>
                                <RadioButton x:Name="MatchNoneRadio"
                                             Content="none"
                                             GroupName="MatchType"
                                             Style="{StaticResource PillRadioButtonStyle}"
                                             Checked="MatchTypeRadio_Checked"/>
                            </StackPanel>
                        </Grid>

                        <!-- Subheader -->
                        <TextBlock x:Name="ConditionsMetLabel"
                                   Text="of these conditions are met:"
                                   FontSize="14"
                                   Foreground="#999999"/>

                        <!-- Conditions List -->
                        <StackPanel x:Name="ConditionsPanel" Spacing="8">
                            <!-- Condition rows will be added here dynamically -->
                        </StackPanel>

                        <!-- Add Condition Button -->
                        <Button x:Name="AddConditionButton"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                Click="AddConditionButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="&#xE710;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="12"
                                           Foreground="#60CDFF"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="AddConditionButtonText"
                                           Text="Add Condition"
                                           FontSize="14"
                                           Foreground="#60CDFF"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- SECTION 3: Actions (placeholder for next prompt) -->
                <Border Background="#252525" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock x:Name="ThenLabel"
                                   Text="Then"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>

                        <TextBlock x:Name="PerformActionsLabel"
                                   Text="perform these actions:"
                                   FontSize="14"
                                   Foreground="#999999"/>

                        <!-- Actions List -->
                        <StackPanel x:Name="ActionsPanel" Spacing="8">
                            <!-- Action rows will be added here dynamically -->
                        </StackPanel>

                        <!-- Add Action Button -->
                        <Button x:Name="AddActionButton"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                HorizontalAlignment="Left"
                                Click="AddActionButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="&#xE710;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="12"
                                           Foreground="#60CDFF"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="AddActionButtonText"
                                           Text="Add Action"
                                           FontSize="14"
                                           Foreground="#60CDFF"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="#252525" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        x:Name="CancelButton"
                        Content="Cancel"
                        Background="#333333"
                        Foreground="White"
                        Padding="20,10"
                        CornerRadius="6"
                        Margin="0,0,12,0"
                        Click="CancelButton_Click"/>

                <Button Grid.Column="2"
                        x:Name="SaveButton"
                        Content="Save Rule"
                        Background="#60CDFF"
                        Foreground="White"
                        Padding="20,10"
                        CornerRadius="6"
                        Click="SaveButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
