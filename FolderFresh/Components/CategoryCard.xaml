<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FolderFresh.Components.CategoryCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderFresh.Components"
    xmlns:models="using:FolderFresh.Models">

    <Border x:Name="CardBorder"
            Background="#252525"
            BorderBrush="#333333"
            BorderThickness="1"
            CornerRadius="12"
            Padding="16">
        <StackPanel Spacing="8">
            <!-- ROW 1: Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Toggle Switch -->
                <ToggleSwitch Grid.Column="0"
                              x:Name="EnabledToggle"
                              OnContent=""
                              OffContent=""
                              MinWidth="40"
                              Margin="0,0,12,0"
                              VerticalAlignment="Center"
                              Toggled="EnabledToggle_Toggled"/>

                <!-- Middle: Color circle + Name -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Ellipse x:Name="ColorCircle"
                             Width="14"
                             Height="14"
                             Fill="#5B9BD5"/>
                    <TextBlock x:Name="NameText"
                               Text="Category Name"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#FFFFFF"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Right: Actions (for custom) or Lock (for default) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <!-- Lock icon for default categories -->
                    <FontIcon x:Name="LockIcon"
                              Glyph="&#xE72E;"
                              FontSize="16"
                              Foreground="#666666"
                              ToolTipService.ToolTip="Default category"
                              Visibility="Collapsed"/>

                    <!-- Edit button for custom categories -->
                    <Button x:Name="EditButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="4"
                            CornerRadius="4"
                            ToolTipService.ToolTip="Edit category"
                            Click="EditButton_Click"
                            PointerEntered="ActionButton_PointerEntered"
                            PointerExited="ActionButton_PointerExited"
                            Visibility="Collapsed">
                        <FontIcon Glyph="&#xE70F;"
                                  FontSize="20"
                                  Foreground="#666666"/>
                    </Button>

                    <!-- Delete button for custom categories -->
                    <Button x:Name="DeleteButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="4"
                            CornerRadius="4"
                            ToolTipService.ToolTip="Delete category"
                            Click="DeleteButton_Click"
                            PointerEntered="ActionButton_PointerEntered"
                            PointerExited="ActionButton_PointerExited"
                            Visibility="Collapsed">
                        <FontIcon Glyph="&#xE74D;"
                                  FontSize="20"
                                  Foreground="#666666"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- ROW 2: Extension Pills -->
            <ItemsControl x:Name="ExtensionsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="6"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border Background="#2D2D2D"
                                CornerRadius="4"
                                Padding="10,6">
                            <TextBlock Text="{x:Bind}"
                                       FontSize="12"
                                       Foreground="#CCCCCC"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- ROW 3: Destination -->
            <StackPanel Orientation="Horizontal" Spacing="6">
                <FontIcon Glyph="&#xE8B7;"
                          FontSize="13"
                          Foreground="#999999"/>
                <TextBlock x:Name="DestinationText"
                           Text="â†’ Documents"
                           FontSize="13"
                           Foreground="#999999"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
