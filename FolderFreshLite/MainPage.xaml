<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FolderFreshLite.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:FolderFreshLite.Components"
    xmlns:local="using:FolderFreshLite"
    Background="#111214"
    RequestedTheme="Dark">

    <NavigationView
        x:Name="NavView"
        Background="#111214"
        IsBackButtonVisible="Collapsed"
        IsPaneToggleButtonVisible="False"
        IsSettingsVisible="False"
        OpenPaneLength="200"
        PaneDisplayMode="Left"
        SelectionChanged="NavView_SelectionChanged">

        <NavigationView.PaneCustomContent>
            <Grid Background="#17181A" />
        </NavigationView.PaneCustomContent>

        <NavigationView.Resources>
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="#111214" />
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="#17181A" />
            <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#17181A" />
        </NavigationView.Resources>

        <NavigationView.MenuItems>
            <NavigationViewItem
                Content="Home"
                IsSelected="True"
                Tag="home">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE80F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Folders" Tag="folders">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8B7;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Rules" Tag="rules">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE945;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Categories" Tag="categories">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8EC;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Profiles" Tag="profiles">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE77B;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <NavigationView.FooterMenuItems>
            <NavigationViewItem Content="Settings" Tag="settings">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE713;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.FooterMenuItems>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Top Bar  -->
            <Grid
                Grid.Row="0"
                Padding="16,0"
                Background="#1E1F22">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  App Title  -->
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">
                    <FontIcon
                        FontSize="16"
                        Foreground="#5865F2"
                        Glyph="&#xE8B5;" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="FolderFresh Lite" />
                </StackPanel>

                <!--  Folder Selector  -->
                <Button
                    Grid.Column="2"
                    Padding="12,6"
                    VerticalAlignment="Center"
                    Background="#232428"
                    BorderBrush="Transparent"
                    Click="FolderSelector_Click"
                    CornerRadius="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            FontSize="14"
                            Foreground="#B5BAC1"
                            Glyph="&#xE8B7;" />
                        <TextBlock
                            x:Name="FolderPathText"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#B5BAC1"
                            Text="Select Folder..." />
                        <FontIcon
                            FontSize="10"
                            Foreground="#949BA4"
                            Glyph="&#xE70D;" />
                    </StackPanel>
                </Button>
            </Grid>

            <!--  Main Content - Frame for page navigation  -->
            <Frame
                x:Name="ContentFrame"
                Grid.Row="1"
                Visibility="Collapsed" />

            <!--  Home Content (default view)  -->
            <Grid
                x:Name="HomeContent"
                Grid.Row="1"
                Padding="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Left Panel - Current  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        CharacterSpacing="50"
                        FontSize="10"
                        FontWeight="SemiBold"
                        Foreground="#949BA4"
                        Text="CURRENT" />

                    <Border
                        Grid.Row="1"
                        MinHeight="380"
                        Background="#1E1F22"
                        BorderBrush="#2B2D31"
                        BorderThickness="1"
                        CornerRadius="12">

                        <Grid>
                            <!--  Empty State  -->
                            <StackPanel
                                x:Name="CurrentEmptyState"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="12">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    FontSize="48"
                                    Foreground="#3F4147"
                                    Glyph="&#xE838;" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="#6D6F78"
                                    Text="Select a folder to preview" />
                            </StackPanel>

                            <!--  File Explorer Panel  -->
                            <components:FileExplorerPanel
                                x:Name="CurrentFilesPanel"
                                Background="Transparent"
                                FileOpened="CurrentFilesPanel_FileOpened"
                                FolderOpened="CurrentFilesPanel_FolderOpened"
                                SelectionChanged="CurrentFilesPanel_SelectionChanged"
                                Visibility="Collapsed" />
                        </Grid>
                    </Border>
                </Grid>

                <!--  Center Arrow  -->
                <TextBlock
                    Grid.Column="1"
                    Margin="16,0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Foreground="#5865F2"
                    Text="→" />

                <!--  Right Panel - After  -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        CharacterSpacing="50"
                        FontSize="10"
                        FontWeight="SemiBold"
                        Foreground="#949BA4"
                        Text="AFTER" />

                    <Border
                        Grid.Row="1"
                        MinHeight="380"
                        Background="#1E1F22"
                        BorderBrush="#2B2D31"
                        BorderThickness="1"
                        CornerRadius="12">

                        <Grid>
                            <!--  Empty State  -->
                            <StackPanel
                                x:Name="AfterEmptyState"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="12">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    FontSize="48"
                                    Foreground="#3F4147"
                                    Glyph="&#xE734;" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="#6D6F78"
                                    Text="Organized preview" />
                            </StackPanel>

                            <!--  File Explorer Panel for After Preview  -->
                            <components:FileExplorerPanel
                                x:Name="AfterFilesPanel"
                                Background="Transparent"
                                EmptyStateText="No files to organize"
                                FolderOpened="AfterFilesPanel_FolderOpened"
                                Visibility="Collapsed" />
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!--  Bottom Action  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,0,0,32"
                HorizontalAlignment="Center"
                Spacing="12">

                <Button
                    x:Name="OrganizeButton"
                    Width="200"
                    Height="44"
                    Background="#5865F2"
                    Click="OrganizeButton_Click"
                    Content="Organize Now"
                    CornerRadius="10"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Shadow>
                        <ThemeShadow />
                    </Button.Shadow>
                </Button>

                <HyperlinkButton
                    x:Name="UndoButton"
                    HorizontalAlignment="Center"
                    Click="UndoButton_Click"
                    Content="Undo"
                    FontSize="11"
                    Foreground="#949BA4"
                    Visibility="Collapsed" />
            </StackPanel>
        </Grid>
    </NavigationView>
</Page>
